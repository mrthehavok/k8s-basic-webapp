# Centralised variable definitions for Terraform
#
# **Instructions**:
# 1. Copy this file to `terraform.tfvars`.
# 2. Replace the placeholder values below.
# 3. The CI/CD pipeline will automatically use `terraform.tfvars`.

aws_region   = "eu-west-1"

# EKS cluster
cluster_name = "basic-webapp-eks"

# Networking
vpc_cidr        = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.101.0/24", "10.0.102.0/24"]

# GitHub repository for OIDC trust (e.g., "my-org/my-repo")
github_repo = "CHANGE_ME/CHANGE_ME"